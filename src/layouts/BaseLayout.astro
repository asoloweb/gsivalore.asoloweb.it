---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { DIRECTUS_URL, directusItemsUrl } from '../lib/directus';
import '../styles/global.css';

export interface Props {
	title: string;
	seoTitle?: string;
	seoDescription?: string;
}

const { title, seoTitle, seoDescription } = Astro.props;
const resolvedTitle = seoTitle || title;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="theme-color" content="#C1A776" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
		<meta name="generator" content={Astro.generator} />
		<title>{resolvedTitle}</title>
		{seoDescription && <meta name="description" content={seoDescription} />}
		<!-- DNS prefetch for critical domains -->
		<link rel="dns-prefetch" href="https://embeds.iubenda.com" />
		<!-- Preconnect to critical resources -->
		<link rel="preconnect" href={DIRECTUS_URL} />
		<!-- Load non-critical CSS asynchronously -->
		<link rel="stylesheet" href="/vendor/aos.css" media="print" onload="this.media='all'" />
		<link rel="stylesheet" href="/vendor/swiper-bundle.min.css" media="print" onload="this.media='all'" />
		<noscript>
			<link rel="stylesheet" href="/vendor/aos.css" />
			<link rel="stylesheet" href="/vendor/swiper-bundle.min.css" />
		</noscript>
		<!-- Iubenda - Loaded after DOM ready -->
		<script>
			if (document.readyState === 'loading') {
				document.addEventListener('DOMContentLoaded', function() {
					const script = document.createElement('script');
					script.type = 'text/javascript';
					script.async = true;
					script.src = 'https://embeds.iubenda.com/widgets/51cccd42-6c12-44c0-9f50-46a28ce0e030.js';
					document.head.appendChild(script);
				});
			} else {
				const script = document.createElement('script');
				script.type = 'text/javascript';
				script.async = true;
				script.src = 'https://embeds.iubenda.com/widgets/51cccd42-6c12-44c0-9f50-46a28ce0e030.js';
				document.head.appendChild(script);
			}
		</script>
		<!-- End Iubenda -->
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
		<script defer src="/vendor/aos.js"></script>
		<script defer src="/vendor/swiper-bundle.min.js"></script>
		<script defer src="/scripts/aos-init.js"></script>
		<script defer src="/scripts/swiper-init.js"></script>
	</body>
</html>
