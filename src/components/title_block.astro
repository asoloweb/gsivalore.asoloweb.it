---
interface Props {
	item: string;
	titolo?: string;
	sottotitolo?: string;
	descrizione?: string;
}

const { 
	item, 
	titolo = '', 
	sottotitolo = '', 
	descrizione = '' 
} = Astro.props;
---

<div class="title_block">
	<div class="title_content">
		{titolo && <h1>{titolo}</h1>}
		{sottotitolo && <h2>{sottotitolo}</h2>}
		{descrizione && <p>{descrizione}</p>}
	</div>
</div>

<style>
	.title_block {
		padding: 30px 0;
		text-align: center;
		background-color: #f9f9f9;
		margin-bottom: 30px;
	}
	.title_content {
		max-width: 800px;
		margin: 0 auto;
		padding: 0 15px;
	}
	h1 {
		color: #333;
		font-size: 2.5rem;
		margin-bottom: 15px;
	}
	h2 {
		color: #666;
		font-size: 1.5rem;
		margin-bottom: 20px;
	}
	p {
		color: #444;
		line-height: 1.6;
	}
</style>